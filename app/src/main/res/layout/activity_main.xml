<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.ac.gachon.finalprototype.MainActivity">

    <LinearLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp">
        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            sl:scale_base_height="800"
            sl:scale_base_width="480">

            <Button
                android:id="@+id/BtnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="검색"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="0"
                sl:scale_width="120" />

            <Button
                android:id="@+id/BtnZoomIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확대"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="60"
                sl:scale_width="120" />

            <Button
                android:id="@+id/BtnZoomOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="축소"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="120"
                sl:scale_width="120" />

            <Button
                android:id="@+id/BtnCompassMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나침반"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="180"
                sl:scale_width="120" />

            <Button
                android:id="@+id/BtnSetTrackingMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현위치"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="240"
                sl:scale_width="120" />

            <Button
                android:id="@+id/BtnSetMapType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도종류"
                sl:scale_height="60"
                sl:scale_left="360"
                sl:scale_textsize="20"
                sl:scale_top="300"
                sl:scale_width="120"/>

            <Button
                android:id="@+id/BtnHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버튼숨기기"
                sl:scale_height="60"
                sl:scale_left="340"
                sl:scale_textsize="20"
                sl:scale_top="600"
                sl:scale_width="140" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>


</RelativeLayout>
