<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/EditSearch1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="주소를 입력하세요.."
        android:text="검색창"
        android:background="@color/colorPrimaryDark"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/TextLocName1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="명칭"
        android:textColorHighlight="#f5d5dc"
        android:textSize="25dp"
        android:layout_below="@+id/EditSearch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/TextLocAddress1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#69b9ab"
        android:textSize="15dp"
        android:text="주소"
        android:layout_below="@+id/TextDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextDesc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#69b9ab"
        android:textSize="15dp"
        android:text="설명"
        android:layout_below="@+id/TextLocTel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextLocTel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#69b9ab"
        android:text="전화번호"
        android:textSize="15dp"
        android:layout_below="@+id/TextBizName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextBizName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="분류"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextLocName1"
        android:textColor="#69b9ab"
        android:textSize="15dp" />

    <Button
        android:id="@+id/BtnEnd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/BtnStart"
        android:layout_toRightOf="@+id/BtnStart"
        android:text="도착지" />

    <Button
        android:id="@+id/BtnVia"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="경유지"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BtnEnd"
        android:layout_toEndOf="@+id/BtnEnd" />

    <Button
        android:id="@+id/BtnStart"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="출발지" />


</RelativeLayout>